{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "noEmit": true,
    "allowJs": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": "."
  },
  "paths": {
    "*": ["node_modules"],
    "@ceanela/*": ["packages"]
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "lib-esm"
  ],
  "files": [
    "./packages/types/custom.d.ts",
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  }
}
